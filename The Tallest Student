/*
Sample Input
4(test cases)
5(number of students)
5 4 3 1 2(heights of students)
6
3 2 1 5 4 1
7
3 2 1 5 4 1 2
7
5 2 1 5 4 1 2
Sample Output
1
1
4
4
*/
#include<stdio.h>
int main()
{
	int t,j,n,fir,sec,cnt1=0,cnt2=0,ind;
	scanf("%d",&t);
	for(int i=0;i<t;i++)
	{
		ind=0;
		scanf("%d",&n);
		scanf("%d",&fir);
		for(j=1;j<n;j++)
		{
			sec=0;
		    scanf("%d",&sec);
			if(fir>sec)
			{
				cnt1++;
			}
			else
			{
				if(cnt1>=cnt2)
				{
					cnt2=cnt1;
					ind=j;
					fir=sec;
				}
			}
			
				
		}
		printf("%d\n",ind+1);
	}
	return 0;
}
